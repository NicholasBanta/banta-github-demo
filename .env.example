# Environment Configuration File
# Copy this to .env and update values for your environment

# Server Configuration
NODE_ENV=development
PORT=5000

# Encryption Key (Change this to a strong secret in production!)
ENCRYPTION_KEY=your-secret-encryption-key-change-in-production

# API Configuration
API_TIMEOUT=30000
MAX_OTP_ATTEMPTS=5
OTP_EXPIRY_MINUTES=5
OTP_RESEND_COOLDOWN_SECONDS=30

# Email Configuration (for future implementation)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@voterregistration.com

# Database Configuration (for future implementation)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=voter_registration
DB_USER=postgres
DB_PASSWORD=your-db-password

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:5000

# Security
JWT_SECRET=your-jwt-secret-key
SESSION_TIMEOUT=24h

# HTTPS / TLS (optional)
# Set HTTPS=true to enable HTTPS at startup and provide paths to key/cert files
HTTPS=false
SSL_KEY_PATH=./certs/server.key
SSL_CERT_PATH=./certs/server.crt

# Encryption
# Provide a strong secret. It will be hashed to a 32-byte key for AES-256.
ENCRYPTION_KEY=your-very-strong-encryption-key
